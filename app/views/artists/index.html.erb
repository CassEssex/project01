<h1> THE ARTISTS </h1>

<div class="diamond-1">
</div>
<div class="diamond-2">
</div>
<div class="diamond-3">
</div>

  <div class="controls">
<button type="button" class="btn btn-default btn-xs">  <%= link_to 'Add artist', new_artist_path(@artist) %>
  </div>
</button>

  <% @artists.each_slice(3) do |row| %>

    <div class="row">

    <% row.each do |artist| %>
    <div class="col-md-4">
      <%= image_tag(artist.image, :class => 'thumb') %>

      <ul>
          <li> <%= link_to artist.name, artist_path(artist.id) %></li>
          <li><b>NATIONALITY</b> <%= artist.nationality %></li>
          <li><b>Period </b><%= artist.period %></li>
          <li><b>DOB </b><%= artist.dob.strftime '%a, %dth %b %Y' unless artist.dob.nil?  %></li>
          <li><b>Death</b> <%= artist.death.strftime '%a, %dth %b %Y' unless artist.death.nil?  %></li>
          <!-- <li><b>Vice</b> <%= artist.vice unless artist.vice.nil?%></li> -->

      </ul>
    </div>
    <% end %>
  </div>
  <% end %>
